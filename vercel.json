{
  "version": 2,
  "rewrites": [{ "source": "/(.*)", "destination": "/api" }],
  "builds": [
    {
      "src": "./dist/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "./client/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/((?!.*\\.\\w+$).*)",
      "dest": "./dist/index.js"
    }
  ]
}
